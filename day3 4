#include <iostream>
using namespace std;

class RightAngleTriangle {
public:
    RightAngleTriangle(int n) {
        for (int i = 1; i <= n; ++i) {
            for (int j = 1; j <= i; ++j) {
                cout << i << " ";
            }
            cout << endl;
        }
    }
};

int main() {
    int n;
    cout << "Enter number of rows for the right-angle triangle: ";
    cin >> n;

    // Create an object using the parameterized constructor
    RightAngleTriangle triangle(n);

    return 0;
}
