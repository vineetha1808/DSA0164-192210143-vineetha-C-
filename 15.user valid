#include<iostream>
#include<bits/stdc++.h>



using namespace std;

int main()
{

  string username; int length, flag;
  cout << "Enter user name: ";
  cin >> username;
  length = username.length();
  flag = 1;
  for (int i=0;i<length;i++)
  {
  if (isalpha(username[i])) 
  flag = 1;
  else
  {
   flag = 0; break;
  }  
  }

 if (flag == 1)
 {
 cout << "Username is valid";
 }

 else
 {

  cout << "Username is invalid";

 }

 return 0;

}
