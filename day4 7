#include <iostream>
using namespace std;

int main() {
    int arr[] = {10, 20, 30, 40, 50}; // Declare and initialize an array
    int size = sizeof(arr) / sizeof(arr[0]); // Calculate the number of elements in the array

    // Loop to display the address of each element
    for (int i = 0; i < size; ++i) {
        cout << "Address of arr[" << i << "]: " << &arr[i] << endl;
    }

    return 0;
}
